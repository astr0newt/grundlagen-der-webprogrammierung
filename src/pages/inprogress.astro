---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout>
  <div class="container leading-10 mb-16">
    <h1 class="text-2xl mt-6 font-semibold">
      Diese Seite ist noch in Bearbeitung!
    </h1>
    <h2 class="mb-4">Bitte komm später wieder.</h2>
    <button
      onclick="window.location.href='/'"
      class="h-10 w-40 text-base outline outline-2 outline-amber-200 p-1.5 hover:bg-amber-100 rounded-lg"
      >Zurück zu Yummy</button
    >
  </div>
  <Footer />
</BaseLayout>
