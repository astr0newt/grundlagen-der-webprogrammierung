---
import BaseLayout from "../layouts/BaseLayout.astro";
import Greeting from "../components/Greeting.jsx";
import HeroSection from "../components/HeroSection.astro";
import RecipeCard from "../components/RecipeCard.astro";

const pageTitle = "Home Page";
---

<BaseLayout>
  <HeroSection />
  <Greeting
    client:load
    messages={[
      "Hej, du Hobbykoch",
      "Hallo, du Rezeptfreund",
      "Hola, du Feinschmecker",
      "Willkommen, Küchensportler",
    ]}
  />
  <div class="flex justify-between mb-16">
    <RecipeCard
      recipename="Israelischer Eintopf mit Bohnen & Chili"
      photoname="israeli_stew.jpg"
      alt="Bild einer Portion israelischen Eintopfs mit Bohnen und Chili in einer Schüssel"
      duration="45 Minuten"
      tag="Vegan"
    />
    <RecipeCard
      recipename="Mediterraner Salat mit Granatapfel & Minze"
      photoname="mediterranean_salad.jpg"
      alt="Bild einer Portion mediterranem Salats auf einer Platte"
      duration="30 Minuten"
      tag="Vegan"
    />
    <RecipeCard
      recipename="Sommer-Pasta mit getrockneten Tomaten"
      photoname="summer_pasta.jpg"
      duration="30 Minuten"
      tag="Vegetarisch"
    />
    <RecipeCard
      recipename="Milchshake New York Style"
      photoname="milkshake_new_york_style.jpg"
      duration="15 Minuten"
      tag="Vegetarisch"
    />
  </div>
</BaseLayout>
