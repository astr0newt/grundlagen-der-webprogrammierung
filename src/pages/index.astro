---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import Greeting from "../components/Greeting.jsx";
import HeroSection from "../components/HeroSection.astro";
import RecipeSection from "../components/RecipeSection.astro";

const pageTitle = "Home Page";
---

<BaseLayout>
  <HeroSection />
  <!-- client:load makes the component JavaScript load and hydrate (rendered onto the page without JavaScript) immediately on page load. -->
  <Greeting
    client:load
    messages={[
      "Hej, Hobbykoch",
      "Hallo, Rezeptfreund",
      "Hola, Leckermaul",
      "Willkommen, Feinschmecker",
    ]}
  />
  <RecipeSection />
  <Footer />
</BaseLayout>
