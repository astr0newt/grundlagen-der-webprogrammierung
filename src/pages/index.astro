---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import Greeting from "../components/Greeting.jsx";
import HeroSection from "../components/HeroSection.astro";
import RecipeSection from "../components/RecipeSection.astro";

const pageTitle = "Yummy";
---

<BaseLayout pageTitle={pageTitle}>
  <HeroSection />
  <!-- client:load makes the component load and hydrate (that means rendered onto the page) immediately on page load. -->
  <Greeting
    client:load
    messages={[
      "Hej, Hobbykoch",
      "Hallo, Rezeptfreund",
      "Hola, Leckermaul",
      "Willkommen, Feinschmecker",
    ]}
  />
  <RecipeSection />
  <Footer />
</BaseLayout>
